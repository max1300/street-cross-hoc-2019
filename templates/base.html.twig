<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        
        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://bootswatch.com/4/sketchy/bootstrap.min.css">
        {% endblock %}
    </head>
    <body>
<style>
    .navbar-brand{
        text-shadow: 2px 2px 2px black;
    }
    

    a.btn.btn-primary{
        width: 150px;
        box-shadow: 2px 2px 2px black;
    }

</style>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">STREET-CROSS</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item ">
                        <a class="btn btn-primary" role="button" aria-disabled="true" href="{{ path('home') }}">Accueil </a>
                    </li>
                    <li class="nav-item  {{ app.request.get('_route') == 'offres_liste' ? 'active' }}">
                        <a class="btn btn-primary" role="button" aria-disabled="true" href="{{ path('offres_liste') }}">Nos offres</a>
                    </li>
                    <li class="nav-item ">
                        <a class="btn btn-primary" role="button" aria-disabled="true" href="{{ path('offre_create') }}">Cr√©er une offre </a>
                    </li>
                    <li class="nav-item ">
                        <a class="btn btn-primary" role="button" aria-disabled="true" href="{{ path('contact') }}">Contacts </a>
                    </li>
                </ul>   
                

                 
            </div>
        </nav>
        
        {% block body %} {% endblock %}
        
        {% block javascripts %} {% endblock %}

        {% block footer %}
        <style>
            .footer {
              position: fixed;
              left: 0;
              bottom: 0;
              width: 100%;
              background-color: rgba(0, 0, 0, 0.514);
              color: white;
            }

            .footer p{
                color: white;
                font-size: 27px;
            }

            /* Facebook */
            .fa-facebook {
                padding-left: 2%;
                color: white;
                text-decoration: none;
            }

            /* Twitter */
            .fa-twitter {
                padding-left: 1%;
                color: white;
                text-decoration: none;
            }
            </style>
        <div class="footer">
            <p>
                
                <a href="#" class="fa fa-facebook"></a>
                <a href="#" class="fa fa-twitter"></a>
            </p>
        </div
        {% endblock %}

    </body>
</html>
